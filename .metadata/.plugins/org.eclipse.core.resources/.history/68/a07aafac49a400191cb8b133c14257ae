package chapter3;

import java.util.Scanner;

public class EX01_namescore {

	public static void main(String[] args) {
		// TODO Auto-generated method stub

		Scanner sc = new Scanner(System.in);  //필요한 변수를 선언한다 1) 입력받을 변수
		double language, english, math;       // 2) 입력받을 변수들
		double sumScore, avrScore;            // 3) 처리할 변수들
		
		System.out.println("이름을 입력하세요");
		String name = sc.next();

		System.out.println("국어 점수 입력");
		language = sc.nextDouble();
		
		System.out.println("영어 점수 입력");
		english = sc.nextDouble();
		
		System.out.println("수학 점수 입력");
		math = sc.nextDouble();

		sumScore = (language + english + math);
		avrScore = ((language + english + math)/3);

		System.out.println(name + "의 총점은" + sumScore + "점," +"평균" + avrScore + "점 입니다.");
	
	
	}

}
